<style>
  /* ── Scroll-reveal ─────────────────────────────────────────── */
  [data-animate] {
    opacity: 0; transform: translateY(24px);
    transition: opacity 0.65s cubic-bezier(0.4,0,0.2,1),
                transform 0.65s cubic-bezier(0.4,0,0.2,1);
  }
  [data-animate].is-visible { opacity: 1; transform: none; }
  [data-animate="d1"] { transition-delay: 0.1s; }
  [data-animate="d2"] { transition-delay: 0.2s; }
  [data-animate="d3"] { transition-delay: 0.3s; }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(20px); }
    to   { opacity: 1; transform: translateY(0); }
  }
  .h1 { animation: fadeUp 0.6s ease 0.05s both; }
  .h2 { animation: fadeUp 0.6s ease 0.18s both; }
  .h3 { animation: fadeUp 0.6s ease 0.31s both; }
  .h4 { animation: fadeUp 0.6s ease 0.44s both; }
  .h5 { animation: fadeUp 0.6s ease 0.57s both; }

  /* ── Hero ──────────────────────────────────────────────────── */
  .pf-hero { background: #09111f; position: relative; overflow: hidden; }
  .pf-hero-dots {
    position: absolute; inset: 0; pointer-events: none;
    background-image: radial-gradient(rgba(255,255,255,0.055) 1px, transparent 1px);
    background-size: 30px 30px;
    -webkit-mask-image: radial-gradient(ellipse 100% 100% at 50% 0%, black 40%, transparent 80%);
    mask-image: radial-gradient(ellipse 100% 100% at 50% 0%, black 40%, transparent 80%);
  }
  .pf-hero-glow {
    position: absolute; pointer-events: none;
    width: 600px; height: 600px; border-radius: 50%;
    background: radial-gradient(circle, rgba(239,68,68,0.1) 0%, transparent 68%);
    top: -220px; right: -160px;
  }

  /* Avatar ring */
  .pf-avatar {
    width: 96px; height: 96px; border-radius: 50%; flex-shrink: 0;
    background: conic-gradient(from 180deg, #991b1b, #ef4444, #fca5a5, #ef4444, #991b1b);
    padding: 2.5px;
    box-shadow: 0 0 32px rgba(239,68,68,0.2);
  }
  .pf-avatar-inner {
    width: 100%; height: 100%; border-radius: 50%;
    background: #09111f;
    display: flex; align-items: center; justify-content: center;
  }

  /* Stats box */
  .pf-stats {
    display: inline-grid; grid-template-columns: repeat(3,1fr);
    border: 1px solid rgba(255,255,255,0.1);
  }
  .pf-stat {
    padding: 14px 28px; text-align: center;
    border-right: 1px solid rgba(255,255,255,0.1);
  }
  .pf-stat:last-child { border-right: none; }

  /* ── Section head ──────────────────────────────────────────── */
  .pf-head { margin-bottom: 2.25rem; }
  .pf-head-label {
    font-size: 10px; font-weight: 800;
    letter-spacing: 0.2em; text-transform: uppercase; color: #ef4444;
    margin-bottom: 6px;
  }
  .pf-head-title {
    font-size: 1.5rem; font-weight: 700; color: #111827; font-family: Georgia, serif;
  }

  /* ── Skill card ────────────────────────────────────────────── */
  .skill-card {
    background: #fff; border: 1px solid #f0f0f0; padding: 24px;
    transition: box-shadow 0.25s, border-color 0.25s, transform 0.25s;
  }
  .skill-card:hover {
    border-color: #e5e7eb;
    box-shadow: 0 8px 30px -6px rgba(0,0,0,0.08);
    transform: translateY(-2px);
  }
  .skill-tag {
    display: inline-flex; align-items: center; gap: 5px;
    padding: 4px 10px; background: #f9fafb; border: 1px solid #ebebeb;
    font-size: 11.5px; font-weight: 500; color: #374151;
    transition: background 0.15s, border-color 0.15s;
  }
  .skill-tag:hover { background: #f3f4f6; border-color: #d1d5db; }
  .skill-dot { width: 6px; height: 6px; border-radius: 50%; flex-shrink: 0; }

  /* ── Project card ──────────────────────────────────────────── */
  .pf-project {
    overflow: hidden; border: 1px solid #f0f0f0;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .pf-project:hover {
    transform: translateY(-5px);
    box-shadow: 0 24px 48px -10px rgba(0,0,0,0.13);
  }
  .pf-proj-cover {
    height: 130px; position: relative; overflow: hidden;
    display: flex; align-items: flex-end; padding: 18px 20px;
  }

  /* ── Experience card ───────────────────────────────────────── */
  .pf-exp {
    background: #fff; border: 1px solid #f0f0f0;
    border-left: 3px solid #e5e7eb;
    transition: border-left-color 0.25s, box-shadow 0.25s;
