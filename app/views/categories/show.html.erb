<%# ── Category header ──────────────────────────────────────── %>
<div class="mb-10 pb-8 border-b border-gray-200">
  <p class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-2">Category</p>
  <div class="flex items-end justify-between gap-4 flex-wrap">
    <h1 class="font-serif text-4xl sm:text-5xl font-bold"><%= @category.name %></h1>
    <span class="text-sm text-gray-400 mb-1">
      <%= pluralize(@articles.count, "article") %>
    </span>
  </div>
  <% if @category.description.present? %>
    <p class="mt-4 text-gray-500 text-base leading-relaxed max-w-2xl"><%= @category.description %></p>
  <% end %>
</div>

<%# ── Articles ──────────────────────────────────────────────── %>
<% if @articles.any? %>

  <%# Hero — first article, full-width feature card %>
  <% hero = @articles.first %>
  <article class="group mb-10 border border-gray-200 hover:border-gray-900 hover:shadow-lg transition-all">
    <div class="grid grid-cols-1 md:grid-cols-5">

      <% if hero.images.attached? %>
        <div class="md:col-span-2 h-[360px] overflow-hidden">
          <%= image_tag hero.images.first, alt: hero.title,
            class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" %>
        </div>
        <div class="md:col-span-3 p-8 flex flex-col justify-center">
      <% else %>
        <div class="md:col-span-2 h-[360px] bg-gray-100 flex items-center justify-center">
          <span class="font-serif text-8xl text-gray-200"><%= @category.name[0] %></span>
        </div>
        <div class="md:col-span-3 p-8 flex flex-col justify-center">
      <% end %>

          <span class="text-xs font-bold px-3 py-1 bg-red-500 text-white uppercase tracking-widest self-start mb-4">
            Latest
          </span>
          <h2 class="font-serif text-2xl sm:text-3xl font-bold leading-tight mb-3">
            <%= link_to hero.title, article_path(hero), class: "hover:text-gray-600 transition-colors" %>
          </h2>
          <p class="text-gray-500 text-sm leading-relaxed mb-5 line-clamp-3"><%= hero.excerpt %></p>
          <div class="flex items-center gap-4 mt-auto">
            <div class="flex items-center gap-1.5 text-xs text-gray-400">
              <%= lucide_icon "calendar", class: "w-3.5 h-3.5 shrink-0" %>
              <time><%= hero.published_at.strftime("%B %-d, %Y") %></time>
            </div>
            <% if hero.tags.any? %>
              <div class="flex flex-wrap gap-1.5">
                <% hero.tags.first(3).each do |tag| %>
                  <%= link_to "##{tag.name}", tag_path(tag),
                    class: "text-xs px-2 py-0.5 bg-gray-100 text-gray-500 hover:bg-gray-900 hover:text-white transition-colors" %>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="mt-6">
            <%= link_to "Read Article →", article_path(hero),
              class: "inline-block text-sm font-semibold px-5 py-2.5 bg-red-500 text-white hover:bg-red-600 transition-colors" %>
          </div>
        </div>
    </div>
  </article>

  <%# Remaining articles — 3-col grid %>
  <% if @articles.count > 1 %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @articles[1..].each do |article| %>
        <%= render "articles/article_card", article: article,
          image_height: "h-[220px]",
          show_category_badge: false,
          tag_limit: 2,
          title_size: "text-lg",
          date_color: "text-gray-400",
          placeholder_icon_size: "w-8 h-8" %>
      <% end %>
    </div>
  <% end %>

<% else %>
  <div class="py-20 text-center border border-dashed border-gray-300">
    <p class="text-gray-400 mb-3">No published articles in this category yet.</p>
    <%= link_to "Write one →", new_admin_article_path, class: "text-sm font-semibold text-gray-900 underline" %>
  </div>
<% end %>

<%# ── Other categories ─────────────────────────────────────── %>
<% other_cats = Category.where.not(id: @category.id).first(6) %>
<% if other_cats.any? %>
  <div class="mt-16 pt-8 border-t border-gray-200">
    <p class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-4">Other Categories</p>
    <div class="flex flex-wrap gap-2">
      <% other_cats.each do |cat| %>
        <%= link_to cat.name, category_path(cat),
          class: "text-xs font-semibold px-4 py-2 border border-gray-200 hover:border-gray-900 hover:bg-gray-900 hover:text-white transition-all" %>
      <% end %>
    </div>
  </div>
<% end %>

<%# ── Footer nav ───────────────────────────────────────────── %>
<div class="mt-8 pt-6 border-t border-gray-200">
  <%= link_to "← All categories", categories_path, class: "text-sm text-gray-400 hover:text-gray-900 transition-colors" %>
</div>
