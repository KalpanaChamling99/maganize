<% if notice.present? %>
  <div class="mb-6 bg-green-50 border border-green-200 text-green-800 text-sm px-4 py-3"><%= notice %></div>
<% end %>

<%# Page header %>
<div class="mb-10 border-b border-gray-200 pb-6 flex items-end justify-between gap-4">
  <div>
    <p class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-1">Explore</p>
    <h1 class="font-serif text-4xl font-bold">All Tags</h1>
    <p class="text-gray-500 mt-2 text-sm">Browse articles by topic</p>
  </div>
  <%= link_to "+ New tag", new_admin_tag_path,
    class: "shrink-0 text-xs font-semibold tracking-widest uppercase px-4 py-2 border border-gray-300 hover:border-gray-900 hover:bg-gray-900 hover:text-white transition-all" %>
</div>

<% if @tags.any? %>
  <%# Tag cloud — size reflects article count %>
  <section class="mb-12">
    <h2 class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-6">Tag Cloud</h2>
    <div class="flex flex-wrap gap-3">
      <% max_count = @tags.map { |t| t.articles.count }.max.to_f %>
      <% @tags.each do |tag| %>
        <% count = tag.articles.count %>
        <% size_class = case count
          when 0      then "text-xs px-3 py-1"
          when 1..3   then "text-sm px-4 py-1.5"
          when 4..9   then "text-base px-5 py-2"
          else             "text-lg px-6 py-2.5"
          end %>
        <%= link_to tag_path(tag),
          class: "#{size_class} border border-gray-300 hover:border-gray-900 hover:bg-gray-900 hover:text-white transition-all font-medium" do %>
          <%= tag.name %>
          <span class="ml-1 opacity-40 text-xs">(<%= count %>)</span>
        <% end %>
      <% end %>
    </div>
  </section>

  <%# Tags list with article count %>
  <section>
    <h2 class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-6">All Topics</h2>
    <div class="divide-y divide-gray-100">
      <% @tags.each do |tag| %>
        <div class="group flex items-center justify-between py-4 hover:bg-gray-50 -mx-2 px-2 transition-colors">
          <div>
            <h3 class="font-serif text-lg font-semibold">
              <%= link_to tag.name, tag_path(tag), class: "hover:text-gray-500 transition-colors" %>
            </h3>
            <% if tag.articles.published.any? %>
              <p class="text-xs text-gray-400 mt-0.5">
                Latest: <%= tag.articles.published.recent.first.title %>
              </p>
            <% end %>
          </div>
          <div class="flex items-center gap-4">
            <span class="text-sm text-gray-400">
              <%= pluralize(tag.articles.published.count, "article") %>
            </span>
            <%= link_to "Browse →", tag_path(tag),
              class: "text-xs font-semibold text-gray-900 opacity-0 group-hover:opacity-100 transition-opacity" %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
<% else %>
  <div class="py-20 text-center border border-dashed border-gray-300">
    <p class="text-gray-400">No tags yet. Add tags when creating or editing articles.</p>
  </div>
<% end %>
