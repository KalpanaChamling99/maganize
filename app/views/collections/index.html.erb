<div class="mb-10 border-b border-gray-200 pb-6">
  <p class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-1">Curated</p>
  <h1 class="font-heading text-4xl font-bold">Collections</h1>
</div>

<% if @collections.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @collections.each do |collection| %>
      <%= link_to collection_path(collection), class: "group block bg-white border border-gray-200 p-6 hover:shadow-lg transition-shadow" do %>
        <div class="flex items-start justify-between gap-4 mb-4">
          <h2 class="font-heading text-lg font-bold text-gray-900 group-hover:text-red-600 transition-colors leading-snug">
            <%= collection.title %>
          </h2>
          <span class="shrink-0 text-[10px] font-bold tracking-widest uppercase text-gray-400 border border-gray-200 px-2 py-1 mt-0.5">
            <%= pluralize(collection.articles.size, "article") %>
          </span>
        </div>
        <% preview = collection.articles.first(3) %>
        <% if preview.any? %>
          <ul class="space-y-1.5">
            <% preview.each do |article| %>
              <li class="text-sm text-gray-500 truncate flex items-center gap-2">
                <span class="w-1 h-1 rounded-full bg-red-400 shrink-0"></span>
                <%= article.title %>
              </li>
            <% end %>
            <% if collection.articles.size > 3 %>
              <li class="text-xs text-gray-400">+ <%= collection.articles.size - 3 %> more</li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="py-20 text-center border border-dashed border-gray-200">
    <p class="text-gray-400">No collections published yet.</p>
  </div>
<% end %>
