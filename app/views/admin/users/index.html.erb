<% content_for :page_title, "Users" %>
<% content_for :header_action do %>
  <%= link_to "+ New User", new_admin_user_path,
    class: "bg-gray-900 text-white text-xs font-semibold tracking-widest uppercase px-4 py-2 hover:bg-gray-700 transition-colors" %>
<% end %>

<div class="bg-white border border-gray-200">
  <% if @users.any? %>
    <table class="w-full text-sm">
      <thead>
        <tr class="border-b border-gray-100 text-xs font-semibold tracking-widest uppercase text-gray-400">
          <th class="text-left px-6 py-3">Name</th>
          <th class="text-left px-6 py-3">Email</th>
          <th class="text-left px-6 py-3">Role</th>
          <th class="text-left px-6 py-3 hidden md:table-cell">Joined</th>
          <th class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-50">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-gray-800 flex items-center justify-center shrink-0">
                  <span class="text-[10px] font-bold text-white leading-none">
                    <%= user.name.split.map(&:first).first(2).join.upcase %>
                  </span>
                </div>
                <div>
                  <p class="font-medium text-gray-900"><%= user.name %></p>
                  <% if user == current_admin_user %>
                    <p class="text-[10px] text-gray-400 tracking-wide">You</p>
                  <% end %>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 text-gray-500"><%= user.email %></td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center px-2 py-0.5 text-[10px] font-bold tracking-widest uppercase <%= AdminUser::ROLE_COLORS[user.role] %>">
                <%= AdminUser::ROLE_LABELS[user.role] %>
              </span>
            </td>
            <td class="px-6 py-4 hidden md:table-cell text-gray-400 text-xs">
              <%= user.created_at.strftime("%b %-d, %Y") %>
            </td>
            <td class="px-6 py-4 text-right whitespace-nowrap">
              <% if current_admin_user.can_manage?(user) %>
                <div class="inline-flex items-center gap-1">
                  <%= link_to edit_admin_user_path(user),
                    class: "inline-flex items-center justify-center w-8 h-8 rounded bg-blue-50 text-blue-500 hover:bg-blue-100 hover:text-blue-700 transition-colors",
                    title: "Edit" do %>
                    <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                    </svg>
                  <% end %>
                  <%= button_to admin_user_path(user), method: :delete,
                    data: { turbo_confirm: "Delete user \"#{user.name}\"? This cannot be undone." },
                    class: "inline-flex items-center justify-center w-8 h-8 rounded bg-red-50 text-red-400 hover:bg-red-100 hover:text-red-700 transition-colors cursor-pointer",
                    form: { style: "display:inline" },
                    title: "Delete" do %>
                    <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                </div>
              <% else %>
                <span class="text-xs text-gray-300">—</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="px-6 py-16 text-center">
      <p class="text-gray-400 mb-3">No users yet.</p>
      <%= link_to "Add the first one →", new_admin_user_path,
        class: "text-sm font-semibold text-gray-900 underline" %>
    </div>
  <% end %>
</div>
