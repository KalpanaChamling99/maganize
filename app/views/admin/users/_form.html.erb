<%= form_with(model: user,
  url: user.new_record? ? admin_users_path : admin_user_path(user),
  class: "space-y-6") do |form| %>

  <% if user.errors.any? %>
    <div class="bg-red-50 border border-red-200 px-5 py-4">
      <p class="text-sm font-semibold text-red-700 mb-2">
        <%= pluralize(user.errors.count, "error") %> prevented this user from being saved:
      </p>
      <ul class="list-disc list-inside text-sm text-red-600 space-y-1">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Name %>
  <div>
    <%= form.label :name, "Name", class: "block text-xs font-semibold tracking-widest uppercase text-gray-500 mb-2" %>
    <%= form.text_field :name,
      placeholder: "Full name",
      class: "w-full border border-gray-200 px-3 py-2.5 text-sm focus:border-gray-900 focus:outline-none focus:ring-0 transition-colors" %>
  </div>

  <%# Email %>
  <div>
    <%= form.label :email, "Email", class: "block text-xs font-semibold tracking-widest uppercase text-gray-500 mb-2" %>
    <%= form.email_field :email,
      placeholder: "user@example.com",
      class: "w-full border border-gray-200 px-3 py-2.5 text-sm focus:border-gray-900 focus:outline-none focus:ring-0 transition-colors" %>
  </div>

  <%# Password %>
  <div>
    <%= form.label :password,
      user.new_record? ? "Password" : "New Password",
      class: "block text-xs font-semibold tracking-widest uppercase text-gray-500 mb-2" %>
    <%= form.password_field :password,
      placeholder: user.new_record? ? "Min. 8 characters" : "Leave blank to keep current",
      class: "w-full border border-gray-200 px-3 py-2.5 text-sm focus:border-gray-900 focus:outline-none focus:ring-0 transition-colors" %>
  </div>

  <%# Role %>
  <div>
    <%= form.label :role_id, "Role", class: "block text-xs font-semibold tracking-widest uppercase text-gray-500 mb-2" %>
    <%= form.select :role_id,
      Role.order(:name).map { |r| [r.name, r.id] },
      { selected: user.role_id, include_blank: "â€” No role â€”" },
      class: "w-full border border-gray-200 px-3 py-2.5 text-sm focus:border-gray-900 focus:outline-none focus:ring-0 transition-colors bg-white" %>
  </div>

  <%# Actions %>
  <div class="flex items-center gap-4 pt-4 border-t border-gray-100">
    <%= form.submit user.new_record? ? "Create User" : "Save Changes",
      class: "bg-gray-900 text-white text-xs font-semibold tracking-widest uppercase px-6 py-2.5 hover:bg-gray-700 transition-colors cursor-pointer" %>
    <%= link_to "Cancel", admin_users_path,
      class: "text-xs font-semibold text-gray-400 hover:text-gray-700 transition-colors" %>
  </div>

<% end %>
