<% content_for :page_title, "Articles" %>
<% content_for :header_action do %>
  <%= link_to "+ New Article", new_admin_article_path,
    class: "bg-gray-900 text-white text-xs font-semibold tracking-widest uppercase px-4 py-2 hover:bg-gray-700 transition-colors" %>
<% end %>

<div class="bg-white border border-gray-200">
  <% if @articles.any? %>
    <table class="w-full text-sm">
      <thead>
        <tr class="border-b border-gray-100 text-xs font-semibold tracking-widest uppercase text-gray-400">
          <th class="text-left px-6 py-3">Title</th>
          <th class="text-left px-6 py-3 hidden md:table-cell">Category</th>
          <th class="text-left px-6 py-3 hidden lg:table-cell">Tags</th>
          <th class="text-left px-6 py-3 hidden lg:table-cell">Status</th>
          <th class="text-left px-6 py-3 hidden xl:table-cell">Date</th>
          <th class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-50">
        <% @articles.each do |article| %>
          <tr class="hover:bg-gray-50 transition-colors group">
            <td class="px-6 py-4 max-w-xs">
              <p class="font-medium line-clamp-1 group-hover:text-gray-600"><%= article.title %></p>
              <p class="text-xs text-gray-400 mt-0.5 line-clamp-1"><%= article.excerpt %></p>
            </td>
            <td class="px-6 py-4 hidden md:table-cell text-gray-500 text-xs">
              <%= article.category&.name || "—" %>
            </td>
            <td class="px-6 py-4 hidden lg:table-cell">
              <div class="flex flex-wrap gap-1">
                <% article.tags.first(3).each do |tag| %>
                  <span class="text-xs px-1.5 py-0.5 bg-gray-100 text-gray-500">#<%= tag.name %></span>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 hidden lg:table-cell">
              <% if article.published? %>
                <span class="inline-flex items-center gap-1 text-xs font-medium text-green-700 bg-green-50 px-2 py-0.5">
                  <span class="h-1.5 w-1.5 rounded-full bg-green-500"></span> Published
                </span>
              <% else %>
                <span class="inline-flex items-center gap-1 text-xs font-medium text-gray-500 bg-gray-100 px-2 py-0.5">
                  <span class="h-1.5 w-1.5 rounded-full bg-gray-400"></span> Draft
                </span>
              <% end %>
              <% if article.featured %>
                <span class="ml-1 text-xs font-medium text-amber-700 bg-amber-50 px-2 py-0.5">★</span>
              <% end %>
            </td>
            <td class="px-6 py-4 hidden xl:table-cell text-gray-400 text-xs">
              <%= article.created_at.strftime("%b %-d, %Y") %>
            </td>
            <td class="px-6 py-4 text-right whitespace-nowrap">
              <%= link_to "Edit", edit_admin_article_path(article),
                class: "text-xs font-semibold text-gray-500 hover:text-gray-900 transition-colors mr-3" %>
              <%= button_to "Delete", admin_article_path(article), method: :delete,
                data: { turbo_confirm: "Delete \"#{article.title}\"? This cannot be undone." },
                class: "text-xs font-semibold text-red-400 hover:text-red-700 transition-colors bg-transparent border-none cursor-pointer p-0" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="px-6 py-16 text-center">
      <p class="text-gray-400 mb-3">No articles yet.</p>
      <%= link_to "Write your first article →", new_admin_article_path,
        class: "text-sm font-semibold text-gray-900 underline" %>
    </div>
  <% end %>
</div>
