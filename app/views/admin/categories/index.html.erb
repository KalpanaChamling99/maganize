<% content_for :page_title, "Categories" %>
<% content_for :header_action do %>
  <%= link_to "+ New Category", new_admin_category_path,
    class: "bg-gray-900 text-white text-xs font-semibold tracking-widest uppercase px-4 py-2 hover:bg-gray-700 transition-colors" %>
<% end %>

<div class="bg-white border border-gray-200">
  <% if @categories.any? %>
    <table class="w-full text-sm">
      <thead>
        <tr class="border-b border-gray-100 text-xs font-semibold tracking-widest uppercase text-gray-400">
          <th class="text-left px-6 py-3">Name</th>
          <th class="text-left px-6 py-3 hidden md:table-cell">Slug</th>
          <th class="text-left px-6 py-3 hidden lg:table-cell">Description</th>
          <th class="text-left px-6 py-3">Articles</th>
          <th class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-50">
        <% @categories.each do |cat| %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 font-medium"><%= cat.name %></td>
            <td class="px-6 py-4 hidden md:table-cell text-gray-400 text-xs font-mono"><%= cat.slug %></td>
            <td class="px-6 py-4 hidden lg:table-cell text-gray-500 text-xs line-clamp-1 max-w-xs">
              <%= cat.description.presence || "—" %>
            </td>
            <td class="px-6 py-4 text-gray-500"><%= cat.articles.count %></td>
            <td class="px-6 py-4 text-right whitespace-nowrap">
              <%= link_to "Edit", edit_admin_category_path(cat),
                class: "text-xs font-semibold text-gray-500 hover:text-gray-900 transition-colors mr-3" %>
              <%= button_to "Delete", admin_category_path(cat), method: :delete,
                data: { turbo_confirm: "Delete \"#{cat.name}\"? All articles in this category will also be deleted." },
                class: "text-xs font-semibold text-red-400 hover:text-red-700 transition-colors bg-transparent border-none cursor-pointer p-0" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="px-6 py-16 text-center">
      <p class="text-gray-400 mb-3">No categories yet.</p>
      <%= link_to "Create the first one →", new_admin_category_path,
        class: "text-sm font-semibold text-gray-900 underline" %>
    </div>
  <% end %>
</div>
