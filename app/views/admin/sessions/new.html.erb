<div class="w-full max-w-sm mx-auto px-4">

  <%# Branding %>
  <div class="text-center mb-8">
    <p class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-1">Admin Panel</p>
    <h1 class="font-serif text-3xl font-bold text-gray-900">The Magazine</h1>
  </div>

  <%# Card %>
  <div class="bg-white border border-gray-200 shadow-sm">

    <%# Red accent bar %>
    <div class="h-1 bg-red-600 w-full"></div>

    <div class="p-8">
      <h2 class="text-base font-semibold text-gray-900 mb-6">Sign in to continue</h2>

      <%# Flash alert %>
      <% if flash[:alert].present? %>
        <div class="bg-red-50 border border-red-200 text-red-700 text-sm px-4 py-3 mb-5">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with url: admin_login_path, method: :post, class: "space-y-5" do |f| %>

        <%# Email %>
        <div>
          <label for="email" class="block text-xs font-semibold tracking-widest uppercase text-gray-500 mb-2">
            Email
          </label>
          <%= f.email_field :email,
            id: "email",
            autocomplete: "email",
            autofocus: true,
            required: true,
            class: "w-full border border-gray-200 px-3 py-2.5 text-sm focus:border-gray-900 focus:outline-none focus:ring-0 transition-colors",
            placeholder: "admin@example.com" %>
        </div>

        <%# Password %>
        <div>
          <label for="password" class="block text-xs font-semibold tracking-widest uppercase text-gray-500 mb-2">
            Password
          </label>
          <%= f.password_field :password,
            id: "password",
            autocomplete: "current-password",
            required: true,
            class: "w-full border border-gray-200 px-3 py-2.5 text-sm focus:border-gray-900 focus:outline-none focus:ring-0 transition-colors",
            placeholder: "••••••••" %>
        </div>

        <%# Submit %>
        <%= f.submit "Sign In",
          class: "w-full bg-gray-900 text-white text-xs font-semibold tracking-widest uppercase px-6 py-3 hover:bg-gray-700 transition-colors cursor-pointer mt-2" %>

      <% end %>
    </div>
  </div>

  <%# Back to site %>
  <p class="text-center mt-6">
    <%= link_to "← Back to site", root_path,
      class: "text-xs text-gray-400 hover:text-gray-700 transition-colors" %>
  </p>

</div>
