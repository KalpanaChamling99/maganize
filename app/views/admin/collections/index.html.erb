<% content_for :page_title, "Collections" %>
<% content_for :header_action do %>
  <%= link_to "+ New Collection", new_admin_collection_path,
    class: "bg-gray-900 text-white text-xs font-semibold tracking-widest uppercase px-4 py-2 hover:bg-gray-700 transition-colors" %>
<% end %>

<div class="bg-white border border-gray-200">
  <% if @collections.any? %>
    <table class="w-full text-sm">
      <thead>
        <tr class="border-b border-gray-100 text-xs font-semibold tracking-widest uppercase text-gray-400">
          <th class="text-left px-6 py-3">Title</th>
          <th class="text-left px-6 py-3 hidden md:table-cell">Articles</th>
          <th class="text-left px-6 py-3 hidden lg:table-cell">Created</th>
          <th class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-50">
        <% @collections.each do |collection| %>
          <tr class="hover:bg-gray-50 transition-colors group">
            <td class="px-6 py-4">
              <div class="flex items-center gap-3">
                <div class="w-14 h-10 shrink-0 bg-gray-100 border border-gray-200 overflow-hidden">
                  <% if collection.cover_image.attached? %>
                    <%= image_tag collection.cover_image, class: "w-full h-full object-cover" %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div>
                  <p class="font-medium group-hover:text-gray-600"><%= collection.title %></p>
                  <% if collection.featured? %>
                    <span class="inline-flex items-center px-1.5 py-0.5 text-[10px] font-bold tracking-widest uppercase bg-red-100 text-red-600">Featured</span>
                  <% end %>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 hidden md:table-cell text-gray-500 text-xs">
              <%= pluralize(collection.articles.size, "article") %>
            </td>
            <td class="px-6 py-4 hidden lg:table-cell text-gray-400 text-xs">
              <%= collection.created_at.strftime("%b %-d, %Y") %>
            </td>
            <td class="px-6 py-4 text-right">
              <div class="flex items-center justify-end gap-3">
                <%= link_to "Edit", edit_admin_collection_path(collection),
                  class: "text-xs font-semibold text-gray-500 hover:text-gray-900 transition-colors" %>
                <%= button_to "Delete", admin_collection_path(collection), method: :delete,
                  class: "text-xs font-semibold text-red-400 hover:text-red-600 transition-colors",
                  data: { turbo_confirm: "Delete \"#{collection.title}\"?" } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="py-16 text-center text-gray-400">
      <p class="mb-3">No collections yet.</p>
      <%= link_to "+ Create your first collection", new_admin_collection_path,
        class: "text-sm font-semibold text-gray-900 underline" %>
    </div>
  <% end %>
</div>
