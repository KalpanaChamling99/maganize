<% content_for :page_title, "Tags" %>
<% content_for :header_action do %>
  <%= link_to "+ New Tag", new_admin_tag_path,
    class: "bg-gray-900 text-white text-xs font-semibold tracking-widest uppercase px-4 py-2 hover:bg-gray-700 transition-colors" %>
<% end %>

<div class="bg-white border border-gray-200">
  <% if @tags.any? %>
    <table class="w-full text-sm">
      <thead>
        <tr class="border-b border-gray-100 text-xs font-semibold tracking-widest uppercase text-gray-400">
          <th class="text-left px-6 py-3">Name</th>
          <th class="text-left px-6 py-3 hidden md:table-cell">Slug</th>
          <th class="text-left px-6 py-3">Articles</th>
          <th class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-50">
        <% @tags.each do |tag| %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4">
              <span class="font-medium">#<%= tag.name %></span>
            </td>
            <td class="px-6 py-4 hidden md:table-cell text-gray-400 text-xs font-mono"><%= tag.slug %></td>
            <td class="px-6 py-4 text-gray-500"><%= tag.articles.count %></td>
            <td class="px-6 py-4 text-right">
              <%= button_to admin_tag_path(tag), method: :delete,
                data: { turbo_confirm: "Delete tag \"#{tag.name}\"?" },
                class: "inline-flex items-center justify-center w-8 h-8 rounded bg-red-50 text-red-400 hover:bg-red-100 hover:text-red-700 transition-colors cursor-pointer",
                form: { style: "display:inline" },
                title: "Delete" do %>
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="px-6 py-16 text-center">
      <p class="text-gray-400 mb-3">No tags yet.</p>
      <%= link_to "Create the first one â†’", new_admin_tag_path,
        class: "text-sm font-semibold text-gray-900 underline" %>
    </div>
  <% end %>
</div>
