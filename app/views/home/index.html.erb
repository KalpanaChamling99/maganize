<%# ── Hero: Featured stories ──────────────────────────────── %>
<% if @featured_articles.any? %>
  <section class="mb-14">
    <div class="section-divider flex items-center gap-3 mb-6">
      <span class="section-label text-xs font-semibold tracking-widest uppercase text-gray-400">Featured</span>
      <div class="divider-line flex-1 h-px bg-gray-200"></div>
    </div>

    <div class="featured-grid grid grid-cols-1 lg:grid-cols-3 gap-px bg-gray-200 border border-gray-200">

      <%# Primary hero card — takes 2 columns %>
      <% hero = @featured_articles.first %>
      <article class="featured-hero bg-white lg:col-span-2 group">
        <% if hero.images.attached? %>
          <div class="h-[350px] overflow-hidden">
            <%= image_tag hero.images.first, alt: hero.title,
              class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" %>
          </div>
        <% else %>
          <div class="placeholder-bg h-[350px] bg-gray-100 flex items-center justify-center">
            <span class="text-gray-300 text-6xl font-serif">&#9733;</span>
          </div>
        <% end %>
        <div class="p-6 sm:p-8">
          <span class="inline-block text-xs font-semibold tracking-widest uppercase text-red-600 mb-3">
            <%= hero.category&.name %>
          </span>
          <h2 class="font-serif text-2xl sm:text-3xl font-bold leading-tight mb-3">
            <%= link_to hero.title, article_path(hero),
              class: "hover:text-gray-600 transition-colors" %>
          </h2>
          <p class="excerpt text-gray-500 text-sm leading-relaxed mb-4 line-clamp-3"><%= hero.excerpt %></p>
          <time class="text-xs text-gray-400 tracking-wide">
            <%= hero.published_at.strftime("%B %-d, %Y") %>
          </time>
        </div>
      </article>

      <%# Secondary hero cards %>
      <div class="featured-sidebar flex flex-col gap-px bg-gray-200">
        <% @featured_articles[1..].each do |article| %>
          <article class="featured-card bg-white flex-1 group p-6 flex flex-col justify-between">
            <div>
              <span class="inline-block text-xs font-semibold tracking-widest uppercase text-red-600 mb-2">
                <%= article.category&.name %>
              </span>
              <h3 class="font-serif text-lg font-bold leading-snug mb-2">
                <%= link_to article.title, article_path(article),
                  class: "hover:text-gray-600 transition-colors" %>
              </h3>
              <p class="excerpt text-gray-500 text-sm leading-relaxed line-clamp-2"><%= article.excerpt %></p>
            </div>
            <time class="text-xs text-gray-400 tracking-wide mt-4 block">
              <%= article.published_at.strftime("%B %-d, %Y") %>
            </time>
          </article>
        <% end %>
      </div>

    </div>
  </section>
<% end %>

<%# ── Category pills ──────────────────────────────────────── %>
<% if @categories.any? %>
  <section class="mb-12">
    <div class="flex flex-wrap gap-2">
      <% @categories.each do |cat| %>
        <%= link_to cat.name, category_path(cat),
          class: "category-pill text-xs font-semibold tracking-widest uppercase px-4 py-2 border border-gray-300 hover:bg-gray-900 hover:text-white transition-all" %>
      <% end %>
    </div>
  </section>
<% end %>

<%# ── Section divider ─────────────────────────────────────── %>
<div class="section-divider flex items-center gap-3 mb-8">
  <span class="section-label text-xs font-semibold tracking-widest uppercase text-gray-400">Latest Articles</span>
  <div class="divider-line flex-1 h-px bg-gray-200"></div>
  <%= link_to "View all →", articles_path, class: "view-all-link text-xs text-gray-400 hover:text-gray-900 transition-colors whitespace-nowrap" %>
</div>

<%# ── Recent articles grid ────────────────────────────────── %>
<% if @recent_articles.any? %>
  <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
    <% @recent_articles.each do |article| %>
      <%= render "articles/article_card", article: article %>
    <% end %>
  </section>
<% else %>
  <%# Empty state ── shown when no articles exist %>
  <section class="py-20 text-center border border-dashed border-gray-300 mb-16">
    <p class="font-serif text-5xl text-gray-200 mb-4">✎</p>
    <p class="text-gray-500 mb-2">No articles published yet.</p>
    <%= link_to "Write your first article →", new_admin_article_path,
      class: "text-sm text-gray-900 font-semibold underline hover:no-underline" %>
  </section>
<% end %>

<%# ── Featured collections ────────────────────────────────── %>
<% @featured_collections.each do |collection| %>
  <% next if collection.articles.empty? %>
  <section class="collection-section mb-16">
    <div class="section-divider flex items-center gap-3 mb-6">
      <span class="section-title text-xs font-semibold tracking-widest uppercase text-gray-900"><%= collection.title %></span>
      <div class="divider-line flex-1 h-px bg-gray-200"></div>
      <%= link_to collection_path(collection),
        class: "view-all-link inline-flex items-center gap-1 text-xs text-gray-400 hover:text-gray-900 transition-colors whitespace-nowrap" do %>
        View all
        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>
    </div>

    <div class="relative mb-6 overflow-hidden" style="min-height:300px;">
      <%# Cover image background %>
      <% if collection.cover_image.attached? %>
        <%= image_tag collection.cover_image,
          class: "absolute inset-0 w-full h-full object-cover",
          alt: "" %>
        <div class="absolute inset-0 bg-gray-900/70"></div>
      <% else %>
        <div class="absolute inset-0 bg-gray-900"></div>
      <% end %>
      <%# Content sits above the background %>
      <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-6">
        <h2 class="font-serif text-3xl font-bold text-white mb-2"><%= collection.title %></h2>
        <p class="text-gray-300 text-xs mb-5"><%= pluralize(collection.articles.size, "article") %></p>
        <%= link_to collection_path(collection),
          class: "inline-flex items-center gap-1.5 text-xs font-semibold text-white border border-white/40 px-5 py-2 hover:border-white transition-colors" do %>
          View all
          <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% collection.articles.first(3).each do |article| %>
        <%= render "articles/article_card", article: article,
          image_height: "h-[220px]",
          show_excerpt: false,
          title_size: "text-lg" %>
      <% end %>
    </div>
  </section>
<% end %>

<%# ── Newsletter banner ───────────────────────────────────── %>
<section class="newsletter-section bg-gray-900 text-white px-8 py-12 text-center mb-4">
  <p class="text-xs tracking-widest uppercase text-gray-400 mb-2">Newsletter</p>
  <h3 class="font-serif text-3xl font-bold mb-3">Never miss a story</h3>
  <p class="text-gray-400 text-sm mb-6 max-w-md mx-auto">
    Get the best articles delivered straight to your inbox every week.
  </p>
  <form class="flex flex-col sm:flex-row gap-3 max-w-sm mx-auto" onsubmit="return false">
    <input type="email" placeholder="your@email.com"
      class="flex-1 px-4 py-2.5 text-gray-900 text-sm focus:outline-none focus:ring-2 focus:ring-white">
    <button type="submit"
      class="bg-white text-gray-900 font-semibold text-sm px-6 py-2.5 hover:bg-gray-100 transition-colors whitespace-nowrap">
      Subscribe
    </button>
  </form>
</section>
