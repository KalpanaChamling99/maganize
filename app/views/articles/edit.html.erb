<%# Page header %>
<div class="mb-8 pb-6 border-b border-gray-200 flex items-center justify-between gap-4">
  <div>
    <p class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-1">Articles</p>
    <h1 class="font-serif text-3xl font-bold">Edit Article</h1>
    <p class="text-sm text-gray-400 mt-1 line-clamp-1"><%= @article.title %></p>
  </div>
  <div class="flex gap-4 text-sm text-gray-400 shrink-0">
    <%= link_to "View →", article_path(@article), class: "hover:text-gray-900 transition-colors" %>
    <%= link_to "← All articles", articles_path, class: "hover:text-gray-900 transition-colors" %>
  </div>
</div>

<div class="max-w-3xl">
  <%= render "form", article: @article %>
</div>
