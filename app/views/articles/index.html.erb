<div class="mb-10 border-b border-gray-200 pb-6 flex items-end justify-between gap-4">
  <div>
    <p class="text-xs font-semibold tracking-widest uppercase text-gray-400 mb-1">Archive</p>
    <h1 class="font-serif text-4xl font-bold">All Articles</h1>
  </div>
  <span class="text-sm text-gray-400 mb-1"><%= pluralize(@articles.count, "article") %></span>
</div>

<% if @articles.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% tag_colors = %w[bg-purple-600 bg-blue-500 bg-green-600 bg-yellow-500 bg-pink-600] %>
    <% @articles.each do |article| %>
      <article class="group bg-white border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
        <div class="relative h-[350px] overflow-hidden">
          <% if article.cover_image.attached? %>
            <%= image_tag article.cover_image, alt: article.title,
              class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" %>
          <% else %>
            <div class="w-full h-full bg-gray-100 flex items-center justify-center">
              <svg class="w-10 h-10 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          <% end %>
          <div class="absolute top-3 left-3 flex flex-wrap gap-1">
            <% if article.category %>
              <span class="text-xs font-bold px-2 py-0.5 bg-red-500 text-white uppercase tracking-wide"><%= article.category.name %></span>
            <% end %>
            <% article.tags.first(3).each_with_index do |tag, i| %>
              <span class="text-xs font-bold px-2 py-0.5 <%= tag_colors[i % tag_colors.length] %> text-white uppercase tracking-wide"><%= tag.name %></span>
            <% end %>
          </div>
        </div>
        <div class="p-5">
          <div class="flex items-center gap-1.5 text-xs text-gray-500 mb-3">
            <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time><%= article.published_at.strftime("%B %-d, %Y") %></time>
          </div>
          <h2 class="font-serif text-xl font-bold leading-snug mb-2">
            <%= link_to article.title, article_path(article),
              class: "text-red-600 hover:text-red-700 transition-colors" %>
          </h2>
          <p class="text-gray-500 text-sm leading-relaxed line-clamp-3 mb-4"><%= article.excerpt %></p>
          <div class="pt-3 border-t border-gray-100">
            <%= link_to "Read More", article_path(article),
              class: "text-sm font-semibold px-4 py-2 bg-red-500 text-white hover:bg-red-600 transition-colors" %>
          </div>
        </div>
      </article>
    <% end %>
  </div>
<% else %>
  <div class="py-20 text-center border border-dashed border-gray-300">
    <p class="text-gray-400 mb-3">No articles published yet.</p>
    <%= link_to "Go to admin â†’", admin_root_path, class: "text-sm font-semibold text-gray-900 underline" %>
  </div>
<% end %>
